@model ASP_Work.Models.W_Articles
@{
    ViewBag.Title = "Delete";
}
<div id="myModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#393D49">
                <h4 class="modal-title" style="color:whi">确实要删除该行吗？</h4>
            </div>
            <div class="modal-body">
                <dl class="dl-horizontal">
                    <dt> ID </dt>
                    <dd> @Html.DisplayFor(model => model.Id) </dd>

                    <dt> 作者 </dt>
                    <dd> @Html.DisplayFor(model => model.TUserName) </dd>

                    <dt> 标题 </dt>
                    <dd> @Html.DisplayFor(model => model.Title) </dd>

                    <dt> 创建时间 </dt>
                    <dd> @Html.DisplayFor(model => model.AddTime) </dd>
                </dl>
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="btn-block text-right">
                        <input type="submit" value="删除" class="btn btn-primary" />
                        <a class="btn btn-primary" href="@Url.Action("Index")">取消</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script>
    $("#myModal").modal();
</script>

