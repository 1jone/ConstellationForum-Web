@model IEnumerable<ASP_Work.Models.W_Articles>
@{
    ViewBag.Title = "文章管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-bordered" style="width:75%;margin:0 auto">
  
     <tr>
        <th style="width:30px;text-align:center">ID</th>
        <th style="width:200px;text-align:center">标题</th>
        <th style="width:60%;text-align:center">内容</th>
        <th style="width:10%;text-align:center">创建时间</th>
        <th style="width:10%;text-align:center">操作</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td style="width:4%;text-align:center">@Html.DisplayFor(modelItem => item.Id)</td>
            <td style="width:16%;text-align:center">@Html.DisplayFor(modelItem => item.Title)</td>
            <td style="width:60%;text-align:center">@Html.DisplayFor(modelItem => item.Brief)</td>
            <td style="width:10%;text-align:center">@Html.DisplayFor(modelItem => item.AddTime)</td>
            <td style="width:10%;text-align:center">
                @Html.RouteLink("查看", null, new { controller = "Home", Action = "Detial", articleid= item.Id })|
                @Html.ActionLink("删除", "Delete",new { articleid = item.Id })
            </td>
        </tr>
    }
  
</table>

